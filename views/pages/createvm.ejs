      <body style="background-color: orange">

  
        <div class="container py-5">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-white mb-4"></h2>
                    <div class="row">
                        <div class="col-md-6 mx-auto">
        
                            <!-- form card login -->
                            <div class="card rounded-0">
                                <div class="card-header">
                                    <h3 class="mb-0 text-center">Create VM</h3>
                                </div>
                                <div class="card-body">
                                    <form action ='/addvm' class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                        <div class="form-group">
                                            <label for="uname1">Select Operating System</label>
                                            <select required>
                                              <option value="Ubuntu 16.04 LTS">Ubuntu 16.04 LTS</option>
                                              <option value="Windows 10">Windows 10</option>
                                              <option value="Debian">Debian</option>
                                              <option value="Linux">Linux</option>
                                            </select>
                                         </div>
                                        <div class="form-group">
                                            <label>Quantity</label>
                                            <select required>
                                              <option value="1">1</option>
                                              <option value="2">2</option>
                                              <option value="3">3</option>
                                              <option value="4">4</option>
                                            </select>        
                                        </div>
                                        <div class="form-group">
                                          <label>Ram memory</label>
                                          <select required>
                                            <option value="1">1 GB</option>
                                            <option value="2">2 GB</option>
                                          </select>        
                                      </div>
                                      <div class="form-group">
                                        <label>Hard disk memory</label>
                                        <select required>
                                          <option value="20">20 GB</option>
                                          <option value="40">40 GB</option>
                                        </select>        
                                    </div>
                                    <div class="form-group">
                                      <label>Name for vm (number added at the end of the name if there are more than 1 vm)</label>
                                      <input type="password" class="form-control form-control-lg rounded-0" id="pwd1" required="" placeholder="Computer's name" autocomplete="new-password">
                                      <div class="invalid-feedback">Enter your password !</div>
                                    </div>
                                    <div class="form-group">
                                        <label>Description : Why do you install this virtual machine?</label>
                                        <textarea name="description" rows="4" cols="50" placeholder="Why are you using VM-Giver?" required></textarea>
                                      </div>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                          <input class="form-check-input" type="checkbox" required> I agree with the <a href="/termsandcontitions">terms and conditions</a>
                                        </label>
                                      </div>
                                        <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Create VMS</button>
                                    </form>
                                </div>
                                <!--/card-block-->
                            </div>
                            <!-- /form card login -->
        
                        </div>
        
        
                    </div>
